<Page
    x:Class="BudgetManager.Pages.ExpListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BudgetManager.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:BudgetManager.Controls"
    mc:Ignorable="d">

    <SplitView x:Name="ExpListSplitView"
               IsPaneOpen="False"
               PanePlacement="Right"
               DisplayMode="Overlay"
               OpenPaneLength="500"
               PaneBackground="Transparent">
        <SplitView.Pane>
            <Border x:Name="ExpListSplitViewPane"
                    Background="{ThemeResource FlyoutBackgroundThemeBrush}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"/>
        </SplitView.Pane>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
            <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    Margin="16"
                    CornerRadius="8"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">

                <ScrollViewer Grid.Row="0"
                              VerticalScrollBarVisibility="Auto"
                              VerticalAlignment="Stretch"
                              VerticalContentAlignment="Top">
                    <ListView x:Name="ExpListListView"
                              IsItemClickEnabled="True"
                              ItemClick="ExpListListView_ItemClick"
                              SelectionMode="None">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel>
                                    <VirtualizingStackPanel.ChildrenTransitions>
                                        <TransitionCollection/>
                                    </VirtualizingStackPanel.ChildrenTransitions>
                                </VirtualizingStackPanel>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </ScrollViewer>
            </Border>
            
            <Button Content="Dodaj"
                    Grid.Row="1"
                    Margin="16, 0"
                    Click="AddButton_Click"/>
        </Grid>
    </SplitView>
</Page>
